@model DigitalViagem.Models.Cliente;
@{
	ViewData["Title"] = "Cliente";
	var clientes = ViewData["clientes"] as List<Cliente>;
}

<h1>Gerenciamento de Clientes</h1>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Clientes Cadastrados:</h2>
			<div class="table-wrapper-scroll-y my-custom-scrollbar col-md-12">
				<table class="table table-hover table-responsive">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nome</th>
							<th>CPF</th>
							<th>Data de Nascimento</th>
							<th>Telefone</th>
							<th>Endereço</th>
							<th>Situação</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var cliente in clientes)
							{
								<tr>
									<td>@cliente.Id</td>
									<td>@cliente.Nome</td>
									<td>@cliente.CPF</td>
									<td>@cliente.Data_Nascimento</td>
									<td>@cliente.Telefone</td>
									<td>@cliente.Endereco</td>
									<td>@cliente.Situacao</td>
									<td>
										<form asp-controller="Cliente" asp-action="Deletar">
											<button class="btn btn-danger" type="submit">Deletar</button>
											<input asp-for="Id" style="visibility:hidden;" type="text" value="@cliente.Id">
										</form>
									</td>
								</tr>
							}
							}
					</tbody>
				</table>
			</div>
			<hr />
			<h2>Adicionar Clientes:</h2>
			<form asp-action="Incluir">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="">Nome:</label>
						<input asp-for="Nome" type="text" class="form-control" id="inputNome" placeholder="Fulano Crebetino">
					</div>
					<div class="form-group col-md-6">
						<label for="">CPF:</label>
						<input asp-for="CPF" type="text" class="form-control" id="inputCPF" placeholder="00000000000">
					</div>
				</div>
				<div class="form-group">
					<label for="">Endereço:</label>
					<input asp-for="Endereco" type="text" class="form-control" id="inputAddress" placeholder="Rua dos Bobos, nº 0">
				</div>
				<div class="form-group">
					<label for="">Telefone:</label>
					<input asp-for="Telefone" type="text" class="form-control" id="inputTelefone" placeholder="71999999999">
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="">Data de Nascimento:</label>
						<input asp-for="Data_Nascimento" type="date" class="form-control" id="inputData">
					</div>

					<div class="form-group col-md-4">
						<label for="">Situação:</label>
						<select asp-for="Situacao" id="" class="form-control">
							<option selected>Escolher...</option>
							<option>Ativo</option>
							<option>Inativo</option>
							<option>Bloqueado</option>
						</select>
					</div>
				</div>
				<button type="submit" class="btn btn-success">Incluir</button>
			</form>
			<br />
			<hr />
			<br />
			<h2>Atualizar Dados</h2>
			<form asp-controller="Cliente" asp-action="Atualizar">
				<div class="form-row">
					<div class="form-group col-md-3">
						<label for="">Código do cliente</label>
						<select class="custom-select" asp-for="Id">
							<option selected>-- Selecione um código</option>
							@{
								foreach (var cliente in clientes)
								{
									<option>@cliente.Id</option>
								}
							}
						</select>
					</div>
					<div class="form-group col-md-6">
						<label for="">Nome completo</label>
						<input asp-for="Nome" type="text" class="form-control" id="" placeholder="Mark Zuck">
					</div>
					<div class="form-group col-md-3">
						<label for="">CPF</label>
						<input asp-for="CPF" type="text" class="form-control" id="" placeholder="00000000000000">
					</div>
					<div class="form-group col-md-9">
						<label for="">Endereço</label>
						<input asp-for="Endereco" type="text" class="form-control" id="">
					</div>
					<div class="form-group col-md-3">
						<label for="">Telefone</label>
						<input asp-for="Telefone" type="text" class="form-control" id="">
					</div>
					<div class="form-group col-md-3">
						<label for="">Data de Nascimento</label>
						<input asp-for="Data_Nascimento" type="date" class="form-control" id="">
					</div>
					<div class="form-group col-md-3">
						<label for="">Situação</label>
						<select class="custom-select" asp-for="Situacao">
							<option selected>-- Selecione uma opção</option>
							<option>Ativo</option>
							<option>Inativo</option>
							<option>Bloqueado</option>
						</select>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Atualizar</button>
			</form>
		</div>
	</div>
</div>
