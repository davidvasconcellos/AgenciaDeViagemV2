@model DigitalViagem.Models.Cliente;
@{
	ViewData["Title"] = "Cliente";
	var clientes = ViewData["clientes"] as List<Cliente>;
}

<h1>Gerenciamento de Clientes</h1>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Clientes Cadastrados:</h2>
			<div class="table-wrapper-scroll-y my-custom-scrollbar col-md-12">
				<table class="table table-hover table-responsive">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nome</th>
							<th>CPF</th>
							<th>Data de Nascimento</th>
							<th>Telefone</th>
							<th>Endereço</th>
							<th>Situação</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var cliente in clientes)
							{
								<tr>
									<th>@cliente.Id</th>
									<th>@cliente.Nome</th>
									<th>@cliente.CPF</th>
									<th>@cliente.Data_Nascimento</th>
									<th>@cliente.Telefone</th>
									<th>@cliente.Endereco</th>
									<th>@cliente.Situacao</th>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
			<hr />
			<h2>Adicionar Clientes:</h2>
			<form asp-action="Incluir">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="">Nome:</label>
						<input asp-for="Nome" type="text" class="form-control" id="inputNome" placeholder="Fulano Crebetino">
					</div>
					<div class="form-group col-md-6">
						<label for="">CPF:</label>
						<input asp-for="CPF" type="text" class="form-control" id="inputCPF" placeholder="00000000000">
					</div>
				</div>
				<div class="form-group">
					<label for="">Endereço:</label>
					<input asp-for="Endereco" type="text" class="form-control" id="inputAddress" placeholder="Rua dos Bobos, nº 0">
				</div>
				<div class="form-group">
					<label for="">Telefone:</label>
					<input asp-for="Telefone" type="text" class="form-control" id="inputTelefone" placeholder="71999999999">
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="">Data de Nascimento:</label>
						<input asp-for="Data_Nascimento" type="date" class="form-control" id="inputData">
					</div>

					<div class="form-group col-md-4">
						<label for="">Situação:</label>
						<select asp-for="Situacao" id="" class="form-control">
							<option selected>Escolher...</option>
							<option>Ativo</option>
							<option>Inativo</option>
							<option>Bloqueado</option>
						</select>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Incluir</button>
			</form>
		</div>
	</div>
</div>
